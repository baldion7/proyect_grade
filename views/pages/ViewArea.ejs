<%- include('../partials/header') %>
<div class="d-flex justify-content-start display_view_setting">
    <%- include('../partials/left_menu') %>
    <input type="hidden" id="id_building" value="<%= id %>">
    <div class= "display_content_modules">
        <div class="content_views-principal" id="content_areas">
            <div>
                <span class="titles_on_view">Áreas del edificio <%= name %> de la Uts</span>
            </div>
            <div class="d-flex justify-content-between" id="select_page_content">
                <label for="lang">Ver
                    <select name="numeric" id="select_areas">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5" selected>5</option>
                        <option value="6">6</option>
                        <option value="10">10</option>
                        <option value="18">18</option>
                    </select>
                    elementos
                </label>
                <div class="d-flex div_search_contens" role="search" >

                    <input class="form-control me-2 search_input" placeholder="Buscar" id="search_campus" aria-label="Search">
                    <button id="btn_new_areas" type="submit"><i class="fa-solid fa-plus"></i></button>
                </div>
            </div>
            <br>
            <br>
            <br>
            <div>
                <div class='card cards_content' id='cards_content_areas'>
                    <div style="display:flex;justify-content:center;align-items:center">
                        <div style="height:100%;width:auto; display:flex;">
                            <div class="sk-cube-grid">
                                <div class="sk-cube sk-cube1"></div>
                                <div class="sk-cube sk-cube2"></div>
                                <div class="sk-cube sk-cube3"></div>
                                <div class="sk-cube sk-cube4"></div>
                                <div class="sk-cube sk-cube5"></div>
                                <div class="sk-cube sk-cube6"></div>
                                <div class="sk-cube sk-cube7"></div>
                                <div class="sk-cube sk-cube8"></div>
                                <div class="sk-cube sk-cube9"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <footer>
                    <div class="creator">
                        <div aria-label="Page navigation example" id="pagination" class="pagination">
                            <label id="label_pagination">Pagina
                                <input type="number" value="1" id="input_pagination" class="input_pagination">
                                de
                                <label id="paginacion_all"></label>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <button type="button" id="btn-pagination-iz" class="btn btn-primary">
                                        <i class="fa-solid fa-chevron-left"></i>
                                    </button>
                                    <button type="button" id="btn-pagination-de" class="btn btn-primary">
                                        <i class="fa-solid fa-chevron-right"></i>
                                    </button>
                                </div>
                            </label>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <div class="display_new" id="display_update_areas">
            <button class="btn-back-to">VOLVER</button>
            <form action="" method="post" id="form_update_areas">
                <br/>
                <br/>
                <br/>
                <span class="titles_on_view">Agregar categoría</span>
                <div class="conteiner_form_div">
                    <div class="conteiner_form_module">
                        <div class="user-img-profile">

                            <div class="user-img-profile-icon" id="user-img-profile-icon-update">
                                <i class="fa-solid fa-arrow-up-short-wide"></i>
                            </div>
                        </div>
                        <div class="user-information">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control styles-font-input"
                                       name="update_name_areas" id="input_update_areas_name"
                                       placeholder="Nombre">
                                <label for="input_update_areas_name">Nombre</label>
                            </div>
                            <div class="form-floating  mb-3">
                                <select class="form-select-full form-select styles-font-input " name="floor_update_areas"
                                        id="input_update_areas_floor">
                                </select>
                                <label class="form-control-placeholder"
                                       for="input_update_equipment_floor">Piso de locación del area</label>
                            </div>
                            <div class="form-floating mb-3">
                                <textarea class="form-control" placeholder="Leave a comment here" id="description_update_areas" name="description_update_areas" style="height: 100px"></textarea>
                                <label for="floatingTextarea2">Descripción</label>
                            </div>
                        </div>
                    </div>
                    <div class="choose-role">
                        <div class="container-search-all-rol">
                            <div>
                                <div class="container-choose-role">
                                    <div class="d-flex justify-content-between">
                                        <label class="titles_on_view">Asignar tipo de área</label>
                                        <button class="btn-new-rol new_type_areas" type="button" style="width: 170px !important;" ><i class="fa-solid fa-plus fa-1x"></i> Crear
                                            tipo de area
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3 d-flex justify-content-between container-roles-search-all">
                            <div class="check-styles-rol ">
                            </div>
                            <div class="d-flex input-search-rol" id="buscar-acciones">
                            </div>
                        </div>
                        <div class="container-rol-existent">
                            <div class="container-rol-existent-div" id="update-conatiner-tipes-areas" >
                            </div>
                        </div>
                    </div>
                </div>
                <div class="creator">
                    <div>
                        <button type="submit" class="btn-save ">Continuar</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="display_new" id="display_new_areas">
            <button class="btn-back-to">VOLVER</button>
            <form action="" method="post" id="form_new_areas">
                <br/>
                <br/>
                <br/>
                <span class="titles_on_view">Agregar categoría</span>
                <div class="conteiner_form_div">
                    <div class="conteiner_form_module">
                        <div class="user-img-profile">

                            <div class="user-img-profile-icon" id="user-img-profile-icon-update">
                                <i class="fa-solid fa-arrow-up-short-wide"></i>
                            </div>
                        </div>
                        <div class="user-information">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control styles-font-input"
                                       name="new_name_areas" id="input_new_areas_name"
                                       placeholder="Nombre">
                                <label for="input_new_areas_name">Nombre</label>
                            </div>
                            <div class="form-floating  mb-3">
                                <select class="form-select-full form-select styles-font-input " name="floor_new_areas"
                                        id="input_new_areas_floor">
                                </select>
                                <label class="form-control-placeholder"
                                       for="input_new_equipment_floor">Piso de locación del área</label>
                            </div>
                            <div class="form-floating mb-3">
                                <textarea class="form-control" placeholder="Leave a comment here" id="description_new_areas" name="description_new_areas" style="height: 100px"></textarea>
                                <label for="floatingTextarea2">Descripción</label>
                            </div>
                        </div>
                    </div>
                    <div class="choose-role">
                        <div class="container-search-all-rol">
                            <div>
                                <div class="container-choose-role">
                                    <div class="d-flex justify-content-between">
                                        <label class="titles_on_view">Asignar tipo de área</label>
                                        <button class="btn-new-rol new_type_areas" type="button" style="width: 170px !important;" ><i class="fa-solid fa-plus fa-1x"></i> Crear
                                            tipo de area
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3 d-flex justify-content-between container-roles-search-all">
                            <div class="check-styles-rol ">
                            </div>
                            <div class="d-flex input-search-rol" id="buscar-acciones">

                            </div>
                        </div>
                        <div class="container-rol-existent">
                            <div class="container-rol-existent-div" id="new-conatiner-tipes-areas" >
                            </div>
                        </div>
                    </div>
                </div>
                <div class="creator">
                    <div>
                        <button type="submit" class="btn-save ">Continuar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <%- include('../partials/right_menu') %>
</div>
<div>
    <%- include('../partials/modal_area') %>
    <%- include('../partials/Importjs') %>
    <script src="/js/ViewArea.js"></script>
</div>
</body>
</html>