                        <div class="form-floating mb-3 " style="width: 100%;">
                            <input type="text" class="form-control styles-font-input"
                                   name="name_floor_new" id="input_new_floor_name"
                                   placeholder="Nombre" style="margin-top: 2%;height: 10%;">
                            <label for="input_new_building_name">Numero del piso</label>
                        </div>
                        <button type="submit"
                                class="btn-accept" style="display: flex; align-items: center; justify-content: center;">
                            Aceptar
                        </button>
                    </form>
                </div>
                <div class="modal-footer d-flex justify-content-around">
                </div>
            </div>
        </div>
